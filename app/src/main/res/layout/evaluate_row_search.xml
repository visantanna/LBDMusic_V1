<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:id="@+id/mainViewId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="@dimen/padding16"
    android:layout_marginTop="@dimen/padding16"
    android:layout_marginStart="@dimen/padding8"
    android:layout_marginEnd="@dimen/padding8">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <ImageView
        android:id="@+id/backgroundSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardviewH"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="6dip">

        <TextView
            android:id="@+id/nameEvaluateSearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/ratingStarsEvaluateSearch"
            android:gravity="center_vertical"
            android:text="Name"
            android:textSize="16sp" />

        <RatingBar
            android:id="@+id/ratingStarsEvaluateSearch"
            style="@style/foodRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="17dp"
            android:backgroundTint="@color/white"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="@color/black"
            android:layout_alignTop="@+id/nameEvaluateSearch"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>